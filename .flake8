[flake8]
max-line-length = 88
ignore = E501, E402, W503, W291, E302, E203, F824
# E501 line too long
# E402 module level import not at top of file
# W503 line break before binary operator
# W291 trailing whitespace
# E302 expected 2 blank lines, found 1
# E203 whitespace before ':'
# F824 `global xxx` is unused: name is never assigned in scope
exclude =
    .git,
    .venv,
    __pycache__,
    build,
    dist,
    docs,
    test,
